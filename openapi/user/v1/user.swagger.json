{
  "swagger": "2.0",
  "info": {
    "title": "OmniPOS Merchant API",
    "description": "API for managing merchant operations in OmniPOS",
    "version": "1.0",
    "contact": {
      "name": "OmniPOS API Support",
      "email": "api@omnipos.com"
    }
  },
  "tags": [
    {
      "name": "MerchantService"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/merchant/current": {
      "get": {
        "summary": "Get Current Merchant",
        "description": "Retrieve currently authenticated merchant details from JWT token",
        "operationId": "MerchantService_GetCurrentMerchant",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/GetCurrentMerchantResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/Status"
            }
          }
        },
        "tags": [
          "Merchant"
        ]
      }
    },
    "/v1/merchant/login": {
      "post": {
        "summary": "Merchant Login",
        "description": "Authenticate merchant and receive access token",
        "operationId": "MerchantService_LoginMerchant",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/LoginMerchantResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/Status"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/LoginMerchantRequest"
            }
          }
        ],
        "tags": [
          "Authentication"
        ],
        "security": []
      }
    }
  },
  "definitions": {
    "Any": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "GetCurrentMerchantResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "timezone": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "LoginMerchantRequest": {
      "type": "object",
      "properties": {
        "phone": {
          "type": "string"
        },
        "pin": {
          "type": "string"
        }
      }
    },
    "LoginMerchantResponse": {
      "type": "object",
      "properties": {
        "accessToken": {
          "type": "string"
        },
        "refreshToken": {
          "type": "string"
        }
      }
    },
    "Status": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/Any"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "description": "JWT token for authentication. Format: 'Bearer {token}'",
      "name": "Authorization",
      "in": "header"
    }
  },
  "security": [
    {
      "Bearer": []
